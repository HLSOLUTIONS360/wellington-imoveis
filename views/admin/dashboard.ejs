<div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:12px;">
  <h2>Painel do Corretor</h2>
  <a class="btn" href="/admin/novo">Novo imóvel</a>
</div>
<div class="grid">
  <% properties.forEach(p => { %>
    <div class="card">
      <% if (p.images && p.images[0]) { %>
        <img src="<%= p.images[0] %>" alt="">
      <% } %>
      <h3><%= p.title %></h3>
      <p><strong>Preço:</strong> <%= p.price || "—" %></p>
      <div style="display:flex; gap:8px; flex-wrap:wrap;">
        <a class="btn light" href="/imovel/<%= p.id %>" target="_blank">Ver</a>
        <a class="btn" href="/admin/editar/<%= p.id %>">Editar</a>
        <form method="post" action="/admin/deletar/<%= p.id %>" onsubmit="return confirm('Apagar este imóvel?');">
          <input class="btn" type="submit" value="Excluir">
        </form>
      </div>
    </div>
  <% }) %>
</div>
